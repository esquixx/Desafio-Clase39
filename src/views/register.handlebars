<div id="register">

    <h1>Registro de usuario</h1>

    <form action="/api/session/register" method="post">

        <label for="name">Nombre:</label>
        <input type="text" class="register-data" name="name" placeholder="Escribe tu nombre" />
        
        <br/>

        <label for="last_name">Apellido:</label>
        <input type="text" class="register-data" name="last_name" placeholder="Escribe tu apellido" />
        
        <br/>

        <label for="age">Edad:</label>
        <input type="number" class="register-data" name="age" placeholder="Escribe tu edad" />
        
        <br/>

        <label for="email">Email:</label>
        <input type="email" class="register-data" name="email" placeholder="Escribe tu email" />
        
        <br/>

        <label for="password">Contraseña:</label>
        <input type="password" class="register-data" name="password" placeholder="Escribe tu contraseña" />
        
        <br/>

        <button type="submit">Enviar</button>

    </form>

</div>